{
  "name": "infra-did-js",
  "version": "0.1.0",
  "description": "InfraBlockchain DID library creating and managing DIDs",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "umd:main": "lib/index.umd.js",
  "source": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/InfraBlockchain/infra-did-js.git"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "license": "MIT",
  "scripts": {
    "test": "",
    "test:ci": "jest -u --coverage",
    "build:js": "microbundle",
    "build": "npm run build:js && npm run test",
    "prepare": "npm run build",
    "release": "semantic-release --debug"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.12",
    "@types/jest": "26.0.19",
    "@types/node": "^14.14.31",
    "codecov": "3.8.1",
    "jest": "26.6.3",
    "microbundle": "0.12.4",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-lint": "4.5.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "did-jwt": "^4.8.0",
    "did-resolver": "^2.1.2",
    "eosjs": "^21.0.3",
    "infra-did-resolver": "^0.1.0",
    "node-fetch": "^2.6.1"
  }
}
